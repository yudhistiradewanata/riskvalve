@{
    ViewData["Title"] = "Import Inspection / Maintenance";
    var urlimportexcel = Url.Action("ImportExcelFile", "Tool");
    var urltemplateInspection = Url.Content("~/Uploads/Downloads/InspectionTemplate.xlsx");
    var urltemplateMaintenance = Url.Content("~/Uploads/Downloads/MaintenanceTemplate.xlsx");
}
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    var tokens = Xsrf.GetAndStoreTokens(Context);
}

<div class="container-fluid">
    <div class="row">
        <div class="sidebar border border-right col-md-3 col-lg-2 p-0 bg-body-tertiary">
            <partial name="ToolSidebar" />
        </div>
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 subheader-negative-margin">
            <div class="subheader">
                <b>Import Inspection</b>
            </div>
            <div class="content-container">
                <div class="row">
                    <div class="col-md-6" style="padding-left:20px;">
                        <form id="inspection-form">
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    Download the template file <a href="@urltemplateInspection" target="_blank">here</a>
                                </div>
                            </div>
                            <br />
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    <label for="fileUpload" class="col-form-label">File: </label>
                                </div>
                                <div class="col">
                                    <input type="hidden" id="modeInspection" name="mode" value="inspection" />
                                    <input type="file" id="fileUploadInspection" name="file" class="form-control"
                                        accept=".xlsx, .xls">
                                </div>
                            </div>
                            <br />
                            <div class="row g-3 align-items-center">
                                <div class="col">
                                    <button type="submit" class="btn btn-outline-primary" style="width: 100%;">Import
                                        File</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <br />
            <div class="subheader">
                <b>Import Maintenance</b>
            </div>
            <div class="content-container">
                <div class="row">
                    <div class="col-md-6" style="padding-left:20px;">
                        <form id="maintenance-form">
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    Download the template file <a href="@urltemplateMaintenance"
                                        target="_blank">here</a>
                                </div>
                            </div>
                            <br />
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    <label for="fileUpload" class="col-form-label">File: </label>
                                </div>
                                <div class="col">
                                    <input type="hidden" id="modeMaintenance" name="mode" value="maintenance" />
                                    <input type="file" id="fileUploadMaintenance" name="file" class="form-control"
                                        accept=".xlsx, .xls">
                                </div>
                            </div>
                            <br />
                            <div class="row g-3 align-items-center">
                                <div class="col">
                                    <button type="submit" class="btn btn-outline-primary" style="width: 100%;">Import
                                        File</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<input type="hidden" id="urlimportexcel" value="@urlimportexcel">

@section Scripts {
    <script src="~/js/tool/import-inspection-maintenance.js"></script>
}